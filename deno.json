{
  "workspace": ["./bot", "./functions", "./shared"],
  "tasks": {
    "start": "deno run -A --env-file=./.env --watch --unstable-cron ./bot/main.ts",
    "deploy": "deno run -A --env-file=./.env ./bot/deploy-commands.ts"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["bot/", "functions/", "shared/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["bot/", "functions/", "shared/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
